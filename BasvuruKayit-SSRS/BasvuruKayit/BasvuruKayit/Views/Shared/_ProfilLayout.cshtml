@using BasvuruKayit.Veritabani
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="Mosaddek">
    <meta name="keyword" content="FlatLab, Dashboard, Bootstrap, Admin, Template, Theme, Responsive, Fluid, Retina">
    <link rel="icon" type="image/png" href="~/Content/BasvuruForm/images/icons/stu.png" />

    <title>Öğrenci Bilgi Sistemi</title>

    <!-- Bootstrap core CSS -->
    <link href="~/Content/ProfilForm/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/Content/ProfilForm/css/bootstrap-reset.css" rel="stylesheet">
    <!--external css-->
    <link href="~/Content/ProfilForm/assets/font-awesome/css/font-awesome.css" rel="stylesheet" />
    <link href="~/Content/ProfilForm/assets/jquery-easy-pie-chart/jquery.easy-pie-chart.css" rel="stylesheet" type="text/css" media="screen" />
    <link rel="~/Content/ProfilForm/stylesheet" href="css/owl.carousel.css" type="text/css">
    <!-- Custom styles for this template -->
    <link href="~/Content/ProfilForm/css/style.css" rel="stylesheet">
    <link href="~/Content/ProfilForm/css/style-responsive.css" rel="stylesheet" />

    <!-- HTML5 shim and Respond.js IE8 support of HTML5 tooltipss and media queries -->
    <!--[if lt IE 9]>
      <script src="js/html5shiv.js"></script>
      <script src="js/respond.min.js"></script>
    <![endif]-->
</head>

<body>
    <section id="container">
        <!--header start-->
        <header class="header white-bg">
            <div class="sidebar-toggle-box">
                <div data-original-title="Toggle Navigation" data-placement="right" class="icon-reorder tooltips"></div>
            </div>

            <a href="~/Profil/Default" class="logo"><span>Öğrenci Bilgi Sistemi</span></a>

            <!--logo end-->
            <div class="nav notify-row" id="top_menu">
                <!--  notification start -->
                <ul class="nav top-menu"></ul>
                <!--  notification end -->
            </div>
            <div class="top-nav ">
                <!--search & user info start-->
                <ul class="nav pull-right top-menu">                 
                    <!-- user login dropdown start-->
                    <li class="dropdown">
                        <a data-toggle="dropdown" class="dropdown-toggle" href="#"> 
                   
                            <span class="username">@Session["AdSoyad"] - @Session["RolAd"]</span>
                            <b class="caret"></b>
                        </a>
                        <ul class="dropdown-menu extended logout">
                            <div class="log-arrow-up"></div>
                            <li><a href="~/Home/CikisYap"><i class="icon-key"></i> Çıkış Yap</a></li>
                        </ul>
                    </li>
                    <!-- user login dropdown end -->
                </ul>
                <!--search & user info end-->
            </div>
        </header>
        <!--header end-->
        <!--sidebar start-->
        <aside>
            <div id="sidebar" class="nav-collapse ">

                @if (User.Identity.IsAuthenticated == true && Convert.ToInt32(Session["RolID"]) == 1)
                {
                    @Html.Partial("_OgrenciPartial")
                }
                else if (User.Identity.IsAuthenticated == true && Convert.ToInt32(Session["RolID"]) == 2)
                {
                    @Html.Partial("_OIsleriPartial")
                }
                else if (User.Identity.IsAuthenticated == true && Convert.ToInt32(Session["RolID"]) == 3)
                {
                    @Html.Partial("_OGorevlisiPartial")
                }

            </div>
        </aside>
        <!--sidebar end-->
        <!--main content start-->
        <section id="main-content">
            <section class="wrapper">
                @RenderBody()
           
                @RenderSection("scripts", required: false)
            </section>
        </section>
        <!--main content end-->

    </section>

    <!-- js placed at the end of the document so the pages load faster -->
    <script src="~/Content/ProfilForm/js/jquery.js"></script>
    <script src="~/Content/ProfilForm/js/jquery-1.8.3.min.js"></script>
    <script src="~/Content/ProfilForm/js/bootstrap.min.js"></script>
    <script class="include" type="text/javascript" src="~/Content/ProfilForm/js/jquery.dcjqaccordion.2.7.js"></script>
    <script src="~/Content/ProfilForm/js/jquery.scrollTo.min.js"></script>
    <script src="~/Content/ProfilForm/js/jquery.nicescroll.js" type="text/javascript"></script>
    <script src="~/Content/ProfilForm/js/jquery.sparkline.js" type="text/javascript"></script>
    <script src="~/Content/ProfilForm/assets/jquery-easy-pie-chart/jquery.easy-pie-chart.js"></script>
    <script src="~/Content/ProfilForm/js/owl.carousel.js"></script>
    <script src="~/Content/ProfilForm/js/jquery.customSelect.min.js"></script>
    <script src="~/Content/ProfilForm/js/respond.min.js"></script>

    <script class="include" type="text/javascript" src="~/Content/ProfilForm/js/jquery.dcjqaccordion.2.7.js"></script>

    <!--common script for all pages-->
    <script src="~/Content/ProfilForm/js/common-scripts.js"></script>

    <!--script for this page-->
    <script src="~/Content/ProfilForm/js/sparkline-chart.js"></script>
    <script src="~/Content/ProfilForm/js/easy-pie-chart.js"></script>
    <script src="~/Content/ProfilForm/js/count.js"></script>
    <script src="~/Scripts/StudentReport.js"></script>

    <script>

        //owl carousel

        $(document).ready(function () {
            $("#owl-demo").owlCarousel({
                navigation: true,
                slideSpeed: 300,
                paginationSpeed: 400,
                singleItem: true,
                autoPlay: true

            });
        });

        //custom select box

        $(function () {
            $('select.styled').customSelect();
        });

    </script>

</body>
</html>
